<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kunal.shophelper.Acitivites.Transaction_Menupage">
    <com.example.kunal.shophelper.Fonts.MyCustonTextView
        android:id="@+id/transtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Transaction"
        android:textColor="@color/black"
        android:layout_margin="24dp"
        android:textSize="54sp"/>
    <com.example.kunal.shophelper.Fonts.MyCustonTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transtext"
        android:text="Choose wisely!!"
        android:textSize="24sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_credittransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="credit"
        android:layout_margin="24dp"
        android:textColor="@color/whitecolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toRightOf="@id/btn_debittransaction"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/customtransactionmenupagebuttons"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/btn_debittransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Debit"
        android:layout_margin="24dp"
        android:textColor="@color/whitecolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_credittransaction"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/customtransactionmenupagebuttons"
        app:layout_constraintVertical_bias="0.65" />
</android.support.constraint.ConstraintLayout>
