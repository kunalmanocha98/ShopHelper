<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kunal.shophelper.Acitivites.DealerMenuActivity">

    <Button
        android:id="@+id/btn_dealer_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="85dp"
        android:text="Chat" />

    <Button
        android:id="@+id/btn_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_dealer_chat"
        android:layout_below="@+id/btn_dealer_chat"
        android:layout_marginTop="60dp"
        android:text="Calendar" />

    <Button
        android:id="@+id/btn_dealer_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_calendar"
        android:layout_below="@+id/btn_calendar"
        android:layout_marginTop="78dp"
        android:text="Transaction" />

    <Button
        android:id="@+id/btn_dealer_addnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/btn_dealer_transaction"
        android:text="add new" />
</RelativeLayout>
