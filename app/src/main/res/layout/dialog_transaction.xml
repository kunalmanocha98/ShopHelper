<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/whitecolor"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitecolor">

            <ImageView
                android:id="@+id/iv_transaction_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/transaction_symbol" />

            <TextView
                android:id="@+id/txt_dialog_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/iv_transaction_icon"
                android:text="Bhagwati II"
                android:textColor="@color/testblack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_dialog_user_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_dialog_user_name"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/iv_transaction_icon"
                android:text="30000"
                android:textColor="@color/testblack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_enter_amount_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_transaction_icon"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Credit Given"
                android:textAllCaps="true"
                android:textColor="@color/testblack"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_enter_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_enter_amount_indicator"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_custom_edit_text_dialog"
                android:maxLines="1"
                android:hint="Enter Amount"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:textColorHint="@color/testgrey"
                android:paddingTop="16dp"
                android:textColor="@color/testblack" />

            <TextView
                android:id="@+id/txt_enter_mode_of_payment_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_enter_amount"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Amount Given BY"
                android:textAllCaps="true"
                android:textColor="@color/testblack"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_enter_mode_of_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_enter_mode_of_payment_indicator"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_custom_edit_text_dialog"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:hint="Mode of Payment"
                android:textColorHint="@color/testgrey"
                android:textColor="@color/testblack" />

            <android.support.v7.widget.CardView
                android:id="@+id/btn_add_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/edt_enter_mode_of_payment"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/testgreen">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Add Payment"
                        android:textColor="@color/whitecolor" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_cancel_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_enter_mode_of_payment"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:layout_toLeftOf="@id/btn_add_payment"
                app:cardBackgroundColor="@color/testgrey">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textColor="@color/whitecolor" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>