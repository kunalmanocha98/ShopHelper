<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivites.LoginPreview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:padding="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fulllogowhite_390"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:elevation="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <com.example.kunal.shophelper.Fonts.MyCustonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Go Checkout The Helper!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"/>

            <ImageView
                android:id="@+id/img_loginpreview"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="90dp"
                android:transitionName="@string/transitionname"
                android:background="@drawable/indiaflagicon" />
          <com.example.kunal.shophelper.Fonts.MyCustonTextView
              android:id="@+id/txt_mobile_code"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="+91"
              android:textSize="20sp"
              android:textColor="@color/black"
              android:layout_marginTop="90dp"
              android:layout_marginLeft="90dp"/>
            <com.example.kunal.shophelper.Fonts.MyCustonTextView
                android:id="@+id/txt_entermobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="@string/transitiontext"
                android:textSize="20sp"
                android:hint="Enter your mobile number"
                android:layout_marginLeft="137dp"
                android:layout_marginTop="90dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="145dp">

            </RelativeLayout>
            <com.example.kunal.shophelper.Fonts.MyCustonTextView
                android:id="@+id/leaveorexit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/logoblue"
                android:text="Leave or Exit"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="160dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>