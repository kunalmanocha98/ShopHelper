<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <android.support.v7.widget.CardView
     android:layout_margin="16dp"
     app:cardBackgroundColor="@color/whitecolor"
     app:cardCornerRadius="4dp"
     app:cardElevation="8dp"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.kunal.shophelper.Fonts.MyCustonTextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="07-Apr-2018"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.kunal.shophelper.Fonts.MyCustonTextView
        android:id="@+id/txt_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Credit"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_date" />
    <com.example.kunal.shophelper.Fonts.MyCustonTextView
        android:id="@+id/txt_debit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debit"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txt_date"
        app:layout_constraintLeft_toRightOf="@id/txt_credit"
        app:layout_constraintRight_toLeftOf="@id/txt_balance"
        android:layout_margin="16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_credit"
        />

    <com.example.kunal.shophelper.Fonts.MyCustonTextView
        android:id="@+id/txt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="balance"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_credit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_date"
        android:layout_margin="16dp"/>
</android.support.constraint.ConstraintLayout>
 </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>