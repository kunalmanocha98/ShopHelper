<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kunal.shophelper.Acitivites.Transaction">

    <TextView
        android:id="@+id/txt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="TextView"
        tools:text="balance"
        android:textSize="40dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edttxt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_balance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="enter amount in rs"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_submitamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttxt_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Submit" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_datewisebalancelist"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
